{
  "info": {
    "_postman_id": "your-unique-id",
    "name": "NestJS Services API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Customer Service",
      "item": [
        {
          "name": "Create Customer",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/customers",
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"John Doe\", \"email\": \"john@example.com\", \"address\": \"123 Main St\"}"
            }
          }
        },
        {
          "name": "Get Customer by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/customers/1"
          }
        },
        {
          "name": "Get All Customers",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/customers"
          }
        }
      ]
    },
    {
      "name": "Inventory Service",
      "item": [
        {
          "name": "Create Product",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/products",
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Laptop\", \"price\": 1500, \"quantity\": 10}"
            }
          }
        },
        {
          "name": "Get Product by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products/1"
          }
        },
        {
          "name": "Get All Products",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products"
          }
        },
        {
          "name": "Validate Stock",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/products/1/validate?quantity=5"
          }
        }
      ]
    }
  ],
  "variable": [
    { "key": "base_url", "value": "http://localhost:3000" }
  ]
}
